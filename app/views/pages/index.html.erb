<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Is homepage</th>
    <th>Is project</th>
    <th>Main menu item</th>
    <th>Upload</th>
    <th>Template</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.description %></td>
    <td><%= page.is_homepage %></td>
    <td><%= page.is_project %></td>
    <td><%= page.main_menu_item_id %></td>
    <td><%= page.upload_id %></td>
    <td><%= page.template_id %></td>
    <td><%= page.slug %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

